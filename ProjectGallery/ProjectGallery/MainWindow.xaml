<Window x:Class="ProjectGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectGallery"
        mc:Ignorable="d"
        xmlns:syncfusionskin= "clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock Text="This is my ticTakToeElement Gallery" FontSize="35" TextAlignment="Center" Margin="10"/>
            <TextBlock Text="This projects showcases my talents and a few of my applications, Enjoy!" TextAlignment="Center" />
            <WrapPanel Margin="10" HorizontalAlignment="Center" Name="ProjectsPanel"></WrapPanel>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Those Are Some Test Projects And Studies" FontSize="20" TextAlignment="Center"/>
            <WrapPanel Margin="10" HorizontalAlignment="Center" Name="ProjectsTestsPanel"></WrapPanel>
        </StackPanel>

    </Grid>



</Window>
