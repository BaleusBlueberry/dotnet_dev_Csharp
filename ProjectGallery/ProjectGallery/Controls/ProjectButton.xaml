<UserControl x:Class="ProjectGallery.Controls.ProjectButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectGallery.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="160">

    <Button Name="MainButton">
        <StackPanel Orientation="Vertical">
            <Image Source="{Binding Icon}" Width="60" Height="60"/>
            <TextBlock Text="{Binding Name}" TextAlignment="Center" TextWrapping="Wrap"/>
        </StackPanel>    
    </Button>
</UserControl>
