  <ItemGroup>
    <None Remove="Resources\IconAlgorithem.png" />
    <None Remove="Resources\IconApi.png" />
    <None Remove="Resources\IconDynamic.png" />
    <None Remove="Resources\IconError.png" />
    <None Remove="Resources\IconWpf.png" />
    <None Remove="Resources\MainAppIcon.png" />
    <None Remove="Resources\ReturnKey.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Resources\IconError.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
