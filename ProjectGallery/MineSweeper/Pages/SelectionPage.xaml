<Page x:Class="MineSweeper.Pages.SelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MineSweeper.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Difficulty Selection">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="Easy" Click="Easy_Click" Margin="10"/>
        <Button Content="Medium" Click="Medium_Click" Margin="10"/>
        <Button Content="Hard" Click="Hard_Click" Margin="10"/>
    </StackPanel>
</Page>
